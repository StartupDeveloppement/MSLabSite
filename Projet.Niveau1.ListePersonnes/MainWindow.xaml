<Window x:Class="Projet.Niveau1.ListePersonnes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet.Niveau1.ListePersonnes"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindow />
    </Window.DataContext>
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Width="200">
            <Label Content="Nom"></Label>
            <TextBox Name="ChampNom" Width="100" HorizontalAlignment="Left"></TextBox>
            <Label Content="Prénom"></Label>
            <TextBox Name="ChampPrenom" Width="100" HorizontalAlignment="Left"></TextBox>
            <Button Name="ButtonAjouter" Width="50" Height="20" Background="LightGreen" Content="Ajouter" Click="ButtonAjouter_Click"></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="200">
            <DataGrid AutoGenerateColumns="True" DataContext="{Binding ListePersonnes}">
            </DataGrid>
        </StackPanel>
    </StackPanel>
</Window>
